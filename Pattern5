import java.util.*;
public class Pattern5
{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int i,j;
        for(i=1;i<=a;i++)
        {
            for(j =a; j>= i; j--)
            {
                System.out.print(" ");
            }
            for(j= 1;j<= i; j++)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
